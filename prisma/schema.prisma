generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String      @id @default(uuid())
  name          String
  email         String
  flashcards    Flashcard[] @relation("UserFlashcards")
  favoriteCards Flashcard[] @relation("FavoriteFlashcards")
}

model Question {
  id         Int      @id @default(autoincrement())
  text       String
  answer     String
  difficulty String
  createdAt  DateTime @default(now())
}

model Flashcard {
  id        Int      @id @default(autoincrement())
  question  String
  answer    String
  createdAt DateTime @default(now())
  user      User?    @relation("UserFlashcards", fields: [userId], references: [id])
  userId    String
  User      User[]   @relation("FavoriteFlashcards")
}
